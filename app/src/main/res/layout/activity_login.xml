<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swa1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ashay.swayambhu_1.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"

            >


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="8dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="Signup_USER.json"
                app:lottie_loop="true"

                />


            <AutoCompleteTextView
                android:id="@+id/login_user"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextcorners"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textAutoComplete"
                android:paddingLeft="15dp"
                android:paddingRight="20dp" />

            <AutoCompleteTextView
                android:id="@+id/login_pass"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextcorners"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />


            <Button
                android:id="@+id/btnsignuplogin"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/buttoncorners"
                android:fontFamily="monospace"
                android:gravity="center"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="Login"
                android:textColor="@color/back"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:onClick="Reset"
                android:text="Forgot password?"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cli"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="Create account"
                android:textColor="@color/white"

                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
